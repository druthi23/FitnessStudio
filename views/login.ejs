<html>

<head>
	<title>Fitness Club</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="css/animate.css">
	<link rel="stylesheet" type="text/css" href="css/style.css">
	<style>
		.wow:first-child {
			visibility: hidden;
		}
	</style>


	<script type="text/javascript">
		window.onload = function () {
			var today = new Date().toISOString().split('T')[0];
			document.getElementsByName("setTodaysDate")[0].setAttribute('min', today);
		}

	</script>
</head>

<body>
	
	<!-- Start Header  -->
	<header>
		<div class="container">
			<div class="logo">
				<a href="">Fitness<span>Club</span></a>
			</div>
			<a href="javascript:void(0)" class="ham-burger">
				<span></span>
				<span></span>
				<span></span>
			</a>
			<div class="nav">
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/about">About</a></li>
					<li><a href="/service">Services</a></li>
					<li><a href="/trainers">Trainers</a></li>
					<li><a href="/schedule">Schedule</a></li>
					<li><a href="/price">Price</a></li>
					<li><a href="/contact">Contact</a></li>
				</ul>
			</div>
		</div>
	</header>





<!-- Start Booking -->
<section class="contact" id="join">
    <div class="container">
        <div class="content">
            <img src="images/shark.jpg" class="box text wow slideInRight" style="position: relative; right:5%;" alt="gallery" />
            <div class="box form wow slideInLeft" style="position: relative;align-items: center; width: 50%;">
                <!-- <img src="images/pexels-photo-841130(1).jpg" class="box text wow slideInRight" style="position: absolute; right:10%;" alt="gallery" /> -->
                <form action="/login" method="post" >
                    
                    <input type="email" placeholder="Enter Email" name="email" required>
					<input type="password" placeholder="Enter Password" name="password" required>
                    <button type="submit" style="width: 100%;">LOGIN</button>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End Booking -->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
	<script>
		$(document).ready(function () {

			$(".ham-burger, .nav ul li a").click(function () {

				$(".nav").toggleClass("open")

				$(".ham-burger").toggleClass("active");
			})
			$(".accordian-container").click(function () {
				$(".accordian-container").children(".body").slideUp();
				$(".accordian-container").removeClass("active")
				$(".accordian-container").children(".head").children("span").removeClass("fa-angle-down").addClass("fa-angle-up")
				$(this).children(".body").slideDown();
				$(this).addClass("active")
				$(this).children(".head").children("span").removeClass("fa-angle-up").addClass("fa-angle-down")
			})

			$(".nav ul li a, .go-down").click(function (event) {
				if (this.hash !== "") {

					event.preventDefault();

					var hash = this.hash;

					$('html,body').animate({
						scrollTop: $(hash).offset().top
					}, 800, function () {
						window.location.hash = hash;
					});

					// add active class in navigation
					$(".nav ul li a").removeClass("active")
					$(this).addClass("active")
				}
			})
		})

	</script>
	<script src="js/wow.min.js"></script>
	<script>
		wow = new WOW(
			{
				animateClass: 'animated',
				offset: 0,
			}
		);
		wow.init();
	</script>
</body>

</html>