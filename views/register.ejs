<!DOCTYPE html>
<html>

<head>
    <title>Fitness Club</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <style>
        .wow:first-child {
            visibility: hidden;
        }
    </style>


    <script type="text/javascript">
        window.onload = function () {
            var today = new Date().toISOString().split('T')[0];
            document.getElementsByName("setTodaysDate")[0].setAttribute('min', today);
        }

    </script>
</head>

<body>

    <!-- Start Header  -->
    <header>
        <div class="container">
            <div class="logo">
                <a href="">Fitness<span>Club</span></a>
            </div>
            <a href="javascript:void(0)" class="ham-burger">
                <span></span>
                <span></span>
                <span></span>
            </a>
            <div class="nav">
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/service">Services</a></li>
                    <li><a href="/trainers">Trainers</a></li>
                    <li><a href="/schedule">Schedule</a></li>
                    <li><a href="/price">Price</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </header>





    <!-- Start Booking -->
    <section class="contact" id="join">
        <div class="container">
            <div class="content">
                <img src="images/gympiclong.jpg" class="box text wow slideInRight" style="position:relative; right:5%;"
                    alt="gallery" />
                <div class="box form wow slideInLeft">
                    <!-- <img src="images/pexels-photo-841130(1).jpg" class="box text wow slideInRight" style="position: absolute; right:10%;" alt="gallery" /> -->
                    <form action="/register" method="post">
                        <input type="text" placeholder="Enter Name" name="user" required>
                        <input type="text" placeholder="Enter Mobile" name="mobile" required>
                        <!-- <label for="trainers" style="color: beige;" type="text">Choose a Trainer:</label> -->
                        <select name="trainers" id="trainers" type="text">
                            <option value="" disabled selected>Select a Trainer</option>
                            <option value="Martha">Martha</option>
                            <option value="Bob">Bob</option>
                            <option value="Jennifer">Jennifer</option>
                            <option value="Dave">Dave</option>
                            <option value="none">None</option>


                        </select>
                        <br>
                        <br>
                        <!-- <label for="trainers" style="color: beige;">Choose a Package:</label> -->

                        <select name="package" id="package">
                            <option value="" disabled selected>Select a Package</option>

                            <option value="Gold">Gold</option>
                            <option value="Pro">Pro</option>
                            <option value="Elite">Elite</option>

                        </select>
                        <br>
                        <br>

                        <button type="submit" style="width: 100%;">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    
    <!-- End Booking -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {

            $(".ham-burger, .nav ul li a").click(function () {

                $(".nav").toggleClass("open")

                $(".ham-burger").toggleClass("active");
            })
            $(".accordian-container").click(function () {
                $(".accordian-container").children(".body").slideUp();
                $(".accordian-container").removeClass("active")
                $(".accordian-container").children(".head").children("span").removeClass("fa-angle-down").addClass("fa-angle-up")
                $(this).children(".body").slideDown();
                $(this).addClass("active")
                $(this).children(".head").children("span").removeClass("fa-angle-up").addClass("fa-angle-down")
            })

            $(".nav ul li a, .go-down").click(function (event) {
                if (this.hash !== "") {

                    event.preventDefault();

                    var hash = this.hash;

                    $('html,body').animate({
                        scrollTop: $(hash).offset().top
                    }, 800, function () {
                        window.location.hash = hash;
                    });

                    // add active class in navigation
                    $(".nav ul li a").removeClass("active")
                    $(this).addClass("active")
                }
            })
        })

    </script>
    <script src="js/wow.min.js"></script>
    <script>
        wow = new WOW(
            {
                animateClass: 'animated',
                offset: 0,
            }
        );
        wow.init();
    </script>
</body>

</html>